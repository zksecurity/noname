// Division (quotient only)
fn Uint8.div(self, rhs: Uint8) -> Uint8 {
    let res = self.divmod(rhs);
    return res[0];
}

fn Uint16.div(self, rhs: Uint16) -> Uint16 {
    let res = self.divmod(rhs);
    return res[0];
}

