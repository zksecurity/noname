    return res[0];
}

// Modulo (remainder only)
fn Uint8.mod(self, rhs: Uint8) -> Uint8 {
    let res = self.divmod(rhs);
    return res[1];
}

fn Uint16.mod(self, rhs: Uint16) -> Uint16 {
